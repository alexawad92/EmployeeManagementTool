<Window x:Class="EmployeeManagementTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagementTool"
        xmlns:view="clr-namespace:EmployeeManagementTool.Views"
        xmlns:viewmodel="clr-namespace:EmployeeManagementTool.ViewModels.Impls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:DetailViewModel}">
            <view:DetailView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <view:NavigationView Grid.Column="0" DataContext="{Binding NavigationViewModel}"></view:NavigationView>
        <ContentControl Grid.Column="1" Content="{Binding DetailViewModel}"></ContentControl>
    </Grid>
</Window>
