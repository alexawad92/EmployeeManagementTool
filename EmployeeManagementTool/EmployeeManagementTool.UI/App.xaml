<Application
    x:Class="EmployeeManagementTool.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:EmployeeManagementTool"
    xmlns:themes="clr-namespace:EmployeeManagementTool.Themes"
    DispatcherUnhandledException="App_OnDispatcherUnhandledException"
    Startup="OnApplicationStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <themes:ThemeResourceDictionary />
                <ResourceDictionary Source="Themes/Styles/ButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
